{
  "manifest_version": 3,
  "name": "Web Content Analyzer",
  "version": "1.0",
  "description": "Analyzes webpage contents and provides summaries.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  }
}


